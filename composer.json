{
    "name": "lemon_framework/lemon",
    "description": "Dead simple microframework allowing you to squeeze the most out of your code",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "TENMAJKL",
            "email": "tenmajkl@liskyjidlokod.fun"
        }
    ],
    "scripts": {
            "test": "./vendor/bin/pest"
        },
    "scripts-descriptions": {
        "test": "Starts unit test"
    },
    "autoload": {
        "psr-4": {
            "Lemon\\": "src/Lemon"
        },
        "files": [
            "src/Lemon/Support/Http/page.php",
            "src/Lemon/Support/Http/shorthands.php",
            "src/Lemon/Support/Http/status_codes.php",
            "src/Lemon/Support/Http/Routing/Helpers.php",
            "src/Lemon/Support/loader.php",
            "src/Lemon/Support/load.php",
            "src/Lemon/Support/Types/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Lemon\\Tests\\": "tests/"
        }   
    },
    "require": {
        "php": "^8.1.0" 
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "vimeo/psalm": "^4.20",
        "friendsofphp/php-cs-fixer": "^3.6",
        "phpstan/phpstan": "^1.4",
        "nunomaduro/phpinsights": "^2.1"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
