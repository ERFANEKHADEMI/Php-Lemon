{
    "name": "lemon_framework/lemon",
    "description": "A php microframework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Majkel",
            "email": "tenmajkl@proton.me"
        }
    ],
    "autoload": {
        "psr-4": {
            "Lemon\\": "src/Lemon"
        },
        "files": [
            "src/Lemon/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Lemon\\Tests\\": "tests/",
            "Lemon\\Fixers\\": "fixers" 
        }   
    },
    "require": {
        "php": "^8.1.0",
        "psr/container": "^2.0",
        "psr/simple-cache": "^3.0",
        "psr/log": "^3.0" 
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "friendsofphp/php-cs-fixer": "^3.6",
        "phpstan/phpstan": "^1.4"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
