#!bin/php

<?php
system("stty raw");
$arrow = false;

$options = [
    ["Basic app", false],
    ["Complex app", false],
    ["Custom", false],
];

$max = sizeof($options) - 1;

foreach ($options as [$option, $o_o])
    echo " ○ " . $option . "\r\n";

echo "\033[A\033[C";

while ($c = fread(STDIN, 1)) {
    if ($c == "[")
    {
        $arrow = true;
        continue;
    }
    if ($c == "q")
    {
        echo "\n\n\r";
        return;
    }

    if (ord($c) == 13)
    {
        if (!$options[$max][1])
        {
            $options[$max][1] = true;
            echo "\033[D ● {$options[$max][0]}\r\033[C";
            continue;
        }
        
        $options[$max][1] = false;
        echo "\033[D ○ {$options[$max][0]}\r\033[C";
    }

    if ($arrow)
    {
        switch($c)
        {
            case "A":
                if ($max == 0)
                    break;
                $max--;
                echo "\033[A";
                break;
            case "B":
                if ($max == sizeof($options) - 1)
                    break;
                $max++;
                echo "\033[B";
                break;
        }
        $arrow = false;
    }
}
?>
